{
  "compilerOptions": {
    "target": "ES2017",
    "lib": ["dom", "dom.iterable", "esnext"],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "paths": {
      "sanity/cli": ["node_modules/sanity/cli"]
    }
  },
  "include": ["**/*.ts", "**/*.tsx", "schemas/index.ts", "sanity.cli.js", "sanity.config.js"],
  "exclude": ["node_modules"]
}
